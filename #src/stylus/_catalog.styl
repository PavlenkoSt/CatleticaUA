.catalog-menu 
    position: absolute
    top: 100%
    left: 0
    z-index 100000
    width 100%
    box-shadow: 0 0 6px rgba(0, 0, 0, 0.6)
    background-color#eff3f4
    border-bottom-left-radius: 30px
    transform: translateX(-150%)
    transition: all ease .1s
    &:before
        content: "";
        width: 200%;
        height: 100%;
        top: 0;
        z-index: -1;
        right: 0;
        position: absolute;
        cursor default
    @media(max-width media-big-tb)
        transform: translateX(-500%)   
        &:before
            display none
    @media(max-width 700px)
        border-bottom-left-radius: 0
        transform: translateY(-150%)
               

.catalog__list 
    color #333
    cursor default

.catalog__item 
    transition: all ease .1s
    h3 
        color: #00499c;
        font-size: 13px;
        line-height: 15px;
        padding: 8px 17px;
        transition: all ease .1s
        @media(max-width 700px) 
            padding 10px 5px
    &:last-child
        border-bottom-left-radius: 30px
    &:hover
        background-color #00b0eb
        h3
            color #fff
        & .catalog-submenu 
            height auto
            opacity: 1
    @media(max-width 1100px)
        & .catalog__section 
            &:last-child
                display none
        &&:last-child,
        &&:first-child
            & .catalog__section 
                &:last-child
                    display block
                &:nth-child(3)
                    .catalog__collection
                        display block
                        .catalog__li
                            margin 0 0 8px 0
    @media(max-width 700px)
        &:last-child
            border-bottom-left-radius: 0


.catalog-submenu 
    position: absolute
    top: 0
    left: 100%
    z-index: 10000000
    background-color: #fff
    border-top-right-radius: 30px
    border-bottom-right-radius: 30px
    border-bottom-left-radius: 30px
    cursor default
    box-shadow: 0 0 6px rgba(0, 0, 0, 0.6)
    height 0
    opacity 0
    overflow: hidden
    @media(max-width 700px)
        right 100%
        left auto
        border-top-right-radius: 0
        border-bottom-right-radius: 0
        border-bottom-left-radius: 0

.catalog__flex
    display flex
    padding 20px 10px
    @media(max-width 1100px)
        width 500px
        flex-wrap: wrap
    @media(max-width media-big-tb)
        width 250px
    @media(max-width 700px)
        position relative
        padding-bottom 40px
    @media(max-width 500px)
        width 150px
        padding 0
        padding-bottom 40px

.catalog__section 
    min-width 200px
    border-right: 1px #d0d0d0 dashed;
    padding 0 10px
    &:last-child
        border-right: none
    @media(max-width 1100px)
        border-right: none
        &&:nth-child(1),
        &&:nth-child(2)
            margin-bottom 25px
        &:nth-child(3)
            .catalog__collection
                display: flex;
                flex-direction: row;
                align-items: center;
                flex-wrap: wrap;
                .catalog__li
                    margin 0 15px 0 0
    @media(max-width media-big-tb)
        margin-bottom 10px
        &&:nth-child(1),
        &&:nth-child(2)
            margin-bottom 10px
        &:nth-child(3)      
            & .catalog__collection
                display block
                .catalog__li
                    margin 0 0 8px 0
    @media(max-width 700px)
        margin 0 !important
        &:nth-child(3)  
            .catalog__showmore
                display none
    @media(max-width 500px)
        min-width auto
        width 150px


.catalog__collection
    display: flex
    flex-direction: column
    @media(max-width 700px)
        display none
    
.catalog__li
    margin-bottom: 8px 
    display flex
    @media(max-width 700px)
        margin 0 !important

.catalog__header
    display flex

.catalog__title 
    font-size 13px    
    cursor pointer
    color: #333;
    font-weight 700
    transition: all ease .1s
    line-height 1.2
    margin-bottom 10px
    text-transform uppercase
    &.list
        margin-bottom 5px
        @media(max-width 700px)
            margin-bottom 0
    @media(min-width media-big-tb)
        &:hover
            text-decoration: underline
    @media(max-width 700px)
        margin 0
        padding 10px 0

.catalog__link
    font-size 13px
    cursor pointer
    color: #005baa;
    line-height: 1.2;   
    transition: all ease .1s
    @media(min-width media-big-tb)
        &:hover
            color secondColor
            text-decoration: underline
    @media(max-width 700px)
        display none
    

.catalog__banner 
    img 
        max-width 65%
        margin 0 auto

.catalog__showmore
    font-size 12px
    line-height 12px
    color: #3d3d3d
    position relative
    transition: all ease .1s
    @media(min-width media-big-tb)
        &:hover
            text-decoration underline
    &:after
        content: '';
        position: absolute;
        width: 0;
        height: 0;
        top: 2px;
        right: -13px;
        border: 4px transparent solid;
        border-left: 4px #3d3d3d solid;
    @media(max-width 700px)
        padding-top 15px
        &:after
            top 17px
            right -16px

.catalog__mobile-more
    display none
    @media(max-width 700px)
        font-size 13px
        line-height 12px
        color: #3d3d3d
        position relative
        display block
        position: absolute
        bottom: 20px
        right : 30px
        &:after
            content ""
            position: absolute;
            width: 0;
            height: 0;
            top: 2px;
            right: -13px;
            border: 4px transparent solid;
            border-left: 4px #3d3d3d solid;
