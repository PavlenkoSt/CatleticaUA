.carts 
    padding-top 40px
    @media(max-width media-tb)
        padding-top 20px
.carts__flex 
    display flex
    flex-direction: row
    align-items: stretch
    @media(max-width media-tb)
        flex-wrap: wrap

.carts__item 
    width 25%
    box-shadow: 0 0 3px #333
    position relative
    overflow hidden
    background-color #333
    @media(min-width media-big-tb)
        &:hover
            .carts__img 
                transform: scale(1.2)
            .carts__title
                &:after
                    width 70%
    @media(max-width media-tb)
        width 50%
        height 300px
    @media(max-width media-mb)
        height 200px


.carts__img 
    min-height: 100%;
    object-fit: cover;
    min-width: 100%;
    transition: all ease .5s

.carts__title 
    position absolute
    bottom 20px
    left 50%
    transform: translateX(-50%)
    font-size 21px
    color #fff
    text-transform uppercase
    font-weight 700
    &:after
        content ""
        width 100%
        height 1px
        background-color #fff
        position absolute
        bottom 0
        left 50%
        z-index 1
        transform: translateX(-50%)
        transition: all ease .3s
    @media(max-width media-tb)
        font-size 18px