.cart 
    background-color #0c0022dc
    position fixed
    top 0
    left 0
    width 100%
    display flex
    justify-content center
    align-items center
    height 100%
    transition all ease .3s
    opacity 0
    z-index -1
    padding 0 5px
    overflow: auto
    &.show
        opacity 1
        z-index 10000000;


.cart__modal 
    width 500px
    background-color #fff
    border-radius: 4px
    transform: translateY(-17px) perspective(700px) rotateX(7deg)
    opacity: 0
    transition all ease-out .3s
    overflow: visible;
    &.show
        transform: translateY(0) perspective(700px) rotateX(0)
        opacity: 1
    @media(max-width media-big-tb)
        width 100%

.cart__header {
    display flex
    justify-content space-between
    border-bottom: 1px solid #dfe4eb;
    padding 5px 15px
    background-color #dddddd
}
.cart__title {
    font-size 15px
    text-transform uppercase
}

.cart__close 
    transition: all ease .2s
    cursor pointer
    img 
        width 25px
        height 25px
    @media(min-width media-big-tb)
        &:hover
            transform: rotate(90deg)

.cart__content 
    padding 10px 15px
    min-height: 100px
    display flex
    justify-content center
    align-items center
    border-bottom: 1px solid #dfe4eb;

.cart__footer 
    display flex
    align-items center
    justify-content center
    padding 15px 15px
    color #333
    background-color #dddddd

.cart__btn 
    margin 0 auto
    border: none 
    background-color mainColor
    font-size 16px
    color #fff
    padding 5px 15px
    transition all ease .2s
    @media(min-width media-big-tb)
        &:hover
            background-color secondColor


.callback-m 
    background-color #0c0022dc
    position fixed
    top 0
    left 0
    width 100%
    display flex
    justify-content center
    align-items center
    height 100%
    transition all ease .3s
    opacity 0
    z-index -1
    padding 0 30px
    overflow: auto
    &.show
        opacity 1
        z-index 10000000;

.callback__window 
    position relative
    width 800px
    background-color #fff
    border-radius: 4px
    transform: translateY(-17px) perspective(700px) rotateX(7deg)
    opacity: 0
    transition all ease-out .3s
    &.show
        transform: translateY(0) perspective(700px) rotateX(0)
        opacity: 1
    @media(max-width media-big-tb)
        width 100%

.callback__header 
    display flex
    justify-content center
    align-items center
    padding 0 15px
    border-bottom: 1px solid #ccc;

.callback__title 
    font-weight: 300;
    font-size: 36px;
    padding-top: 23px;
    color #333
    @media(max-width media-mb)
        font-size 30px
    @media(max-width 440px)
        font-size 20px

.callback__close 
    position: absolute
    top: 15px
    right: 15px
    transition: all ease .2s
    cursor pointer
    img 
        width 25px
        height 25px
    @media(min-width media-big-tb)
        &:hover
            transform: rotate(90deg)
    @media(max-width media-mb)
        top 5px
        right 5px

.callback__content 
    padding-left: 100px
    padding-right: 40px
    display: flex
    flex-direction: column
    align-items: flex-end
    padding-top: 40px
    @media(max-width 900px)
        padding-left 15px
    @media(max-width media-tb)
        padding-left: 15px
        padding-right 15px
    @media(max-width media-mb)
        padding-top 20px

.callback__form 
    display: flex
    flex-direction: column
    align-items: flex-end
    span 
        color red
    @media(max-width media-tb)
        width 100%

.callback__label
    margin-bottom 20px
    @media(max-width media-tb)
        display flex
        flex-direction: column
        width 100%
        span 
            display none
    @media(max-width media-mb)
        margin-bottom 10px

.callback__input
    width: 500px
    margin-left: 20px;
    padding 5px 10px
    outline: none
    border 1px solid #333
    transition all ease .2s
    &:focus
        box-shadow: 0 0 5px mainColor
        border 1px solid mainColor
    @media(max-width media-tb)
        width 100%
        margin-left 0
 

.inputs-group
    width: 500px
    display: flex
    justify-content: space-between
    margin-bottom: 30px
    @media(max-width media-tb)
        flex-direction: column
        width 100%
    @media(max-width media-mb)
        margin-bottom 20px

.name-input
    width 35%
    padding 5px 10px
    outline: none;
    border 1px solid #333
    transition all ease .2s
    &:focus
        box-shadow: 0 0 5px mainColor
        border 1px solid mainColor
    @media(max-width media-tb)
        width 100%
        margin-bottom 20px
    @media(max-width media-mb)
        margin-bottom 10px

.comment-input
    width 55%
    padding 5px 10px
    outline: none;
    border 1px solid #333
    transition all ease .2s
    &:focus
        box-shadow: 0 0 5px mainColor
        border 1px solid mainColor
    @media(max-width media-tb)
        width 100%


.callback__info 
    background-color mainColor
    color #fff
    display flex
    justify-content center
    align-items center
    padding 30px 15px
    margin-bottom: 20px
    text-align center
    @media(max-width media-mb)
        padding 15px 10px
        margin-bottom 10px

.callback__footer 
    display flex  
    flex-direction: column
    align-items center
    justify-content center
    padding-bottom 40px
    @media(max-width media-mb)
        padding-bottom 20px

.callback__send 
    margin 0 auto
    border: none 
    background-color  secondColor
    font-size 16px
    color #fff
    padding 5px 15px
    transition all ease .2s
    margin-bottom 15px
    @media(min-width media-big-tb)
        &:hover
            background-color mainColor
    @media(max-width media-mb)
        margin-bottom 10px

.callback__go 
    margin 0 auto
    border: none 
    background-color #333
    font-size 14px
    color #fff
    padding 5px 15px
    transition all ease .2s
    border-radius: 40px
    @media(min-width media-big-tb)
        &:hover
            background-color mainColor