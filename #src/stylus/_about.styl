.about 
    color: #5c6873;
    line-height 35px
    text-align center
    width 100%
    max-width 750px
    padding 0 10px 
    margin 0 auto
    @media(min-height 630px)
        padding-top 30px
    @media(max-width media-tb)
        padding 20px 5px 0
    @media(max-width media-big-tb)
        padding-top 30px

.about__main 
    font-size 20px
    margin-bottom 10px
    @media(max-width media-tb)
        font-size 18px
        line-height 28px
    @media(max-width media-mb)
        font-size 14px

.about__desc 
    font-size 20px
    @media(max-width media-tb)
        font-size 18px
        line-height 28px
    @media(max-width media-mb)
        font-size 14px
