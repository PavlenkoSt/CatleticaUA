.con-p 
    background-color #f7f7f7 
    margin-top -45px
    padding: 30px 0
    @media(max-width media-big-tb) 
        padding-top 20px
        margin-top 0
.con-p__header
    margin-bottom: 15px
    @media(max-width media-mb)     
        margin-bottom 20px
.con-p-form__header
    margin-bottom: 0 !important
    line-height 1.2
.con-p__item 
    margin-bottom 15px
    display flex
    @media(max-width media-mb) 
        display block
        text-align center

.con-p__title 
    background-color mainColor
    color #fff
    display inline
    padding 5px 15px
    text-transform uppercase
    font-size 20px
    margin-right 10px
    @media(max-width media-mb) 
        margin-right 0
.con-p__text 
    color #5c6873;
    margin-top 10px
    font-size 15px

.con-p__form
    margin-top 30px
    padding 15px
    background-color #fff
    
.con-p__subtitle
    max-width 800px
    width 100%
    padding 0 15px
    text-align center
    margin 0 auto
    text-transform uppercase
    font-size 14px
    color #333
    margin-bottom 30px
    margin-top 10px

.con-p__form form 
    display flex
    flex-direction: column

.con-p__form input 
    margin-bottom 10px 
    padding 5px
    border: 2px solid rgb(180, 180, 180)
    color: #333
    outline: none
    transition: all ease .2s
    &::placeholder
        color  rgb(180, 180, 180)
    &:focus
        border: 2px solid mainColor

.con-p__form textarea 
    width 100%
    height 300px
    resize: none 
    padding 5px
    border: 2px solid rgb(180, 180, 180)
    color: #333
    outline: none
    transition: all ease .2s
    &::placeholder
        color  rgb(180, 180, 180)
    &:focus
        border: 2px solid mainColor
    @media(max-width media-mb) 
        height 150px

.con-p__form input.input-btn
    margin 0
    margin-top 10px
    cursor: pointer
    background-color mainColor
    color: #fff
    border: none
    transition: all ease .2s
    padding 10px
    &:hover
        background-color secondColor

.social__pics.contact
   @media(max-width media-mb) 
        width 100%
        justify-content: space-around