.fixed
    background-color: #f7f7f7;
    background-image: url(../img/fixed-bg.jpg);
    background-repeat: no-repeat;
    background-attachment: fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    background-position: center center;
    padding: 100px 0;
    position: relative;
    z-index 10000
    overflow hidden
    @media(max-width media-big-tb)
        padding 70px 0;
    @media(max-width media-mb)
        padding 30px 0;

.fixed__flex 
    display flex
    flex-direction: column
    color: #fff
    text-transform uppercase
    text-align center
    align-items center
    padding 0 50px
    @media(max-width media-tb)
        padding 0

.fixed__title 
    font-size 30px
    margin-bottom 30px
    @media(max-width media-tb)
        font-size 28px
    @media(max-width media-big-tb)
        margin-bottom 20px


.fixed__text 
    font-size 18px
    margin-bottom 30px
    line-height 1.8
    @media(max-width media-mb)
        font-size 14px
    @media(max-width media-tb)
        font-size 16px
    @media(max-width media-big-tb)
        margin-bottom 20px
  


.fixed__link {}
   

.fixed__accent
    font-weight 700
    color #ff8401
