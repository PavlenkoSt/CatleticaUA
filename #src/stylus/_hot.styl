.hot 
    padding 40px 0
    @media(max-width media-mb)
        padding 30px 0

.hot__title {
}

.hot__flex 
    display flex
    flex-direction row
    align-items stretch
    justify-content center
    flex-wrap: wrap
    

.hot__item 
    text-align center
    overflow: hidden
    width calc(33.33333% - 2px)
    display flex
    flex-direction: column
    justify-content space-between
    margin 0 1px 20px
    position relative
    @media(min-width media-big-tb)
        &:hover
            box-shadow: 0 0 5px #333
            .hot__hover
                transform: translateY(0)
    @media(max-width media-big-tb)
        width 50%
        margin 0 0 20px
    @media(max-width 650px)
        width 100%
        margin-bottom 10px
        &:last-child
            display none

.hot__photo 
    display: flex
    justify-content: center
    align-items: center
    margin-bottom: 15px
    position: relative
    img 
        object-fit: cover
        width 100%
        height 300px
        @media(max-width 650px)
            width auto
        @media(max-width 350px)
            width: auto;
            max-width: 100%;
            height: auto;
    @media(max-width media-big-tb)
        margin-bottom 0

            

.hot__hover
    position: absolute
    top: 0
    left: 0
    z-index: 100
    width: 100%
    height 100%
    background-color rgba(0, 0, 0, 0.8)
    display flex
    justify-content center
    flex-direction: column
    align-items center
    transform: translateY(-120%)
    transition: all ease .2s

.hot__name 
    font-weight 700
    font-size 18px
    color: #333
    line-height: 1.2
    padding 0 15px
    transition all ease .2s
    @media(min-width media-big-tb)
        &:hover
            color mainColor


.hot__desc 
    color #fff
    padding 0 15px
    cursor default
    margin-bottom 15px
    font-size 15px

.hot__go
    background-color secondColor
    font-size 16px
    color #fff
    padding 5px 15px
    transition all ease .2s
    @media(min-width media-big-tb)
        &:hover
            background-color mainColor

.hot__price 
    color: secondColor 
    margin-top 5px
    font-weight 700
    font-size 16px
    cursor default
    padding-bottom 10px
    line-height 1
    span 
        display block
        font-size 14px
        color #838383
        text-decoration: line-through
        font-weight 500
        line-height 1

.hot__sale
    width 70px
    height 70px
    background-color secondColor
    position absolute
    top 5%
    left 5%
    z-index 1
    display flex
    justify-content center
    align-items center
    color #fff
    font-weight 700
    font-size 20px
    border-radius: 50%
    box-shadow: 0 0 4px #333
