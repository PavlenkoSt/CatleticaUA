body
    overflow: hidden
    &.ready
        overflow: auto
        overflow-x hidden
        font-family: 'Roboto', sans-serif
    &.no-scroll
        overflow: hidden
        @media(min-width media-big-tb)
            padding-right 15.5px
            & .callback-icon
                right 25.5px
    
.container 
    width 100%
    max-width 1200px
    padding 0 15px
    margin 0 auto
    @media(max-width media-mb)
        padding 0 5px

.container-banner
    max-width: 800px
    @media(max-width media-mb)
        padding 0

.title
    font-weight 700
    font-size 32px
    margin-bottom 20px
    text-align center
    text-transform uppercase
    color: #333333
    padding 0 15px
    @media(max-width media-tb)
        font-size 30px
        margin-bottom 10px
    @media(max-width media-mb)
        font-size 26px

.btn
    font-size 18px
    padding 5px 30px
    color #fff
    display flex
    background-color mainColor
    justify-content center
    transition: all ease .2s
    @media(min-width media-big-tb)
        &:hover
            background-color #ff8401
    @media(max-width media-tb)
        padding 15px 30px

@font-face { 
  font-family: 'Roboto'; 
  src: url('Roboto.woff2') format('woff2'),                  
       url('Roboto.woff') format('woff');                  
  font-weight: normal; 
  font-style: normal; 
}