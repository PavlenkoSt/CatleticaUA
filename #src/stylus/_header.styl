.header 
    width 100%
    position relative
    &:before
        content ""
        width 335px
        height 5px
        background-color #fff
        position absolute
        bottom 0
        left 0
        z-index 5
        transform: skew(-34deg)
    @media(max-width media-big-tb) 
        &:before
            display none

.header__flex 
    display flex
    @media(max-width media-big-tb)
        flex-direction column

.header__main 
    padding 0 20px 
    @media(max-width media-big-tb)
        padding 0
    

.header__logo 
    font-size 40px
    text-transform uppercase
    font-weight 700
    letter-spacing 1px
    height 85px
    display flex
    justify-content center
    align-items center
    color mainColor
    position relative
    span 
        color secondColor
    :before
        content: ""
        width 120%
        height 6px
        background-color secondColor
        position absolute
        top 85px
        left -20px
        z-index 11
    @media(max-width media-big-tb)
        width 100%
        padding 0 20px
        height 70px
        :before
            width 100%
            left 0
            top 70px
    @media(max-width 350px)
        padding 0 5px
        font-size 36px
   
.header__catalog
    background-color rgb(216, 216, 216)
    height 60px
    width 100%
    display flex
    align-items center
    justify-content center
    margin-left -20px
    position relative
    z-index 10
    &:before
        content ""
        width 30%
        position absolute
        top 0
        right -50px
        height 100%
        transform skew(-34deg)
        background-color rgb(216, 216, 216)
    &:after
        content: "";
        width: 88px;
        height: 5px;
        background-color: #fff;
        position: absolute;
        top: 25px;
        right: -98px;
        z-index: 20;
        transform: rotate(-56deg) skew(43deg);
    @media(max-width media-big-tb)
        margin-left 0
        &:before
            display none
    @media(max-width media-big-tb) 
        &:after
            display none
    @media(max-width burger)
        justify-content space-between
        padding: 0 15px
    @media(max-width 350px)
        padding 0 5px

.header__catalog-item
    background-color mainColor
    color #fff
    width 180px
    height 60%
    border-top-left-radius: 4px
    border-top-right-radius: 4px
    display flex
    align-items center
    box-shadow: 0 0 3px rgba(0, 0, 0, 0.6)
    position relative
    outline: none 
    border 0
    cursor: pointer 
    transition: all ease .2s .2s
    span 
        margin-left 50px
        text-transform uppercase
        font-size 16px
        font-weight 700
    &:before
        content ""
        width 20px
        height 20px
        background url(../img/icons/menu.svg) center no-repeat
        background-size: cover
        position: absolute
        top 50%
        left 30px
        transform: translate(-50%,-50%)
    &:after
        content ""
        width 15px
        height 15px
        background url(../img/icons/down-arrow.svg) center no-repeat
        background-size: contain
        position: absolute
        top 50%
        right 0px
        transform: translate(-50%,-50%) rotate(180deg) 
        transition: all ease .1s
    &:hover
        &:after
            transform: translate(-50%,-50%) 
        .catalog-menu 
            transform: translateX(0)
        @media(max-width 700px)
            transform: translateX(15px)
        @media(max-width 350px)
            transform: translateX(5px)
    @media(max-width burger)
        width 200px
        justify-content center
        span 
            margin-left 0
            font-size 17px
        &:before
            display none
        &:after
            right 26px
    @media(max-width 460px)
        width 140px
        &:after
            right 2px
    

.header__burger
    span 
        display none
    @media(max-width burger)
        width 30px
        height 30px
        width 200px
        display flex
        align-items center
        justify-content center
        box-shadow: 1px 1px 1px #333
        position relative
        background-color mainColor
        height 60%
        position relative
        outline: none 
        border 0
        border-radius: 4px
        cursor: pointer
        transition: transform ease .1s, border ease .3s .1s, width ease .1s
        &&.active
            transform: translateX(-15px)
            border 5px solid #fff
            border-left: 15px solid #fff
        span 
            display flex
            font-size 18px
            text-transform uppercase
            color #fff
            font-weight 700
            transition: transform ease .1s 
        &:before
            content ""
            width 20px
            height 20px
            background url(../img/icons/menu.svg) center no-repeat
            background-size: cover
            position: absolute
            top 50%
            left 40px
            transform: translate(-50%,-50%)
            transition: transform .1s ease
    @media(max-width 460px)
        width 140px
        &&.active
            width 200px
            &:before
                transform: translate(-50%,-50%) translateX(20px)
        &:before
            left 20px
    @media(max-width 380px)

         &&.active
            width 140px
            span
                transform: translateX(10px)
            &:before
                transform: translate(-50%,-50%) 

.header__menu 
    display flex
    flex-direction column
    height 150px
    width 100%  
    overflow hidden
    @media(max-width media-big-tb)
        height 103px
    @media(max-width burger)
        height 68px


.header__nav 
    height 50px
    display flex
    align-items center
    background-color mainColor
    width 100%
    margin-left 65px
    margin-top 10px
    position relative
    &:before
        content: ""
        width 100%
        position: absolute
        top: -10px
        left: 1px
        background-color secondColor
        height 6px
        transform: skew(-38deg)
    @media(max-width media-big-tb)  
        margin-left 0
        padding-left 40px
        &:before
            left 0
            transform: skew(0)
    @media(max-width burger)
        position absolute
        top 119px
        left 0
        z-index 1000
        flex-direction column
        justify-content flex-start
        width 200px
        height 120%
        padding  0
        margin-top 0
        box-shadow: 0 0 3px #333
        transform translateX(-110%)
        transition all ease .2s
        background-color #fff
        padding 5px
        padding-left 15px
        &&.active
             transform translateX(0)
        &:before
            display none
    @media(max-width 380px)
        width 140px
    @media(max-width 350px)
        padding-left 5px
        width 130px


.nav__item 
    height 100%
    padding 0 50px
    background-color mainColor
    display flex
    justify-content center
    align-items center
    box-shadow: 0 0 1px #333
    transform translateX(-20px) skew(-34deg)
    transition all ease .2s
    span 
        transform: skew(34deg)
        color #fff
        display flex
        font-size 20px
    &&.active
        background-color secondColor
    @media (min-width 1550px)
        flex: 1 1 auto;
    @media(min-width media-big-tb)
        &:hover
            background-color secondColor
    @media(max-width 1100px)
        padding 0 40px
    @media(max-width 1100px)
        padding 0 35px
    @media(max-width media-big-tb) 
        flex: 1 1 auto;
    @media(max-width burger)
        transform translateX(0) skew(0)
        padding 10px 15px
        box-shadow none
        width 100%
        justify-content start
        margin-bottom 5px
        &:last-child
            margin-bottom 0
        span
            transform: skew(0)

.header__action 
    display flex
    align-items center
    width 110%
    background-color rgb(216, 216, 216)
    margin-top 4px
    transform skewX(-34deg)
    height 35px
    position relative
    z-index 11
    margin-left 15px
    @media(max-width media-big-tb) 
        width 100%
        transform skewX(0)
        margin-left 0
        justify-content space-around
        padding 0 15px
        z-index 9
    @media(max-width burger)
        height 60px
        justify-content center
    @media(max-width burger)
        justify-content space-around
    @media(max-width 350px)
        padding 0 5px

.callback__phone 
    transform skew(34deg)
    display flex
    background url(../img/icons/call.svg) left no-repeat
    background-size 18px
    padding-left 25px
    margin-left 25px
    margin-right 30px
    color rgb(226, 0, 0)
    font-size 18px
    font-style italic
    transition: all .2s ease
    height 100%
    display flex
    align-items center
    position relative
    @media(min-width media-big-tb)
        &:hover
            &:before
                width 108px
    &:before
        content: ""
        width 0
        height 1px
        background-color rgb(226, 0, 0)
        position absolute
        bottom 6px
        right 0
        z-index 1
        transition: all ease .2s
    @media(max-width 1150px)
         margin-right 0
    @media(max-width media-big-tb) 
        transform: skew(0)
        margin-left 0
    @media(max-width burger)
        font-size 20px

.callback__btn 
    display flex
    color secondColor
    background-color #fff
    padding 3px 20px
    align-items center
    transition: all ease .2s
    span 
        transform skew(34deg)
        font-size 15px
        color: secondColor
        transition: all ease .2s
    @media(min-width media-big-tb)
        &:hover
            background-color secondColor
            span
                color #fff
    @media(max-width 1150px)
        display none

.callback__cart
    background-color rgb(226, 0, 0)
    height 100%
    padding 0 50px
    display flex
    align-items center
    justify-content center
    margin-left 50px
    position relative
    span
        display flex
        transform skew(34deg)
        color: #fff
        font-size 15px
        @media(max-width 1400px)
            display none
    &:before
        content ""
        position absolute
        top 50%
        left 20%
        transform: translate(-50%,-50%) skew(34deg)
        background url(../img/icons/cart.svg) center no-repeat
        background-size cover
        width 20px
        height 20px
    @media(min-width media-big-tb)
        &:hover
            .callback__counter
                transform: translate(-50%,-50%) skew(34deg) scale(1.2)
    @media(max-width 1400px)
        padding 0
        width 70px
        &:before
            left 30%
    @media(max-width 1300px)
        margin-left 30px
    @media(max-width media-big-tb) 
        margin-left 0
        &:before
            transform: translate(-50%,-50%) 
    @media(max-width 450px) 
        border-radius: 100%

.callback__counter
    position: absolute
    top 50%
    right 5%
    color:#fff
    transform: translate(-50%,-50%) skew(34deg)
    font-size 16px
    background-color secondColor
    width 24px
    height 24px
    display flex
    align-items center
    justify-content center
    border-radius: 50%
    box-shadow: 0 0 1px #333;
    transition: all ease .1s
    @media(max-width 1400px)
         right 0
    @media(max-width media-big-tb) 
        transform: translate(-50%,-50%)

.search 
    display flex
    align-items center
    transform: skew(34deg)
    margin-left 50px
    position relative
    &:before
        content ""
        width 15px
        height 15px
        background url(../img/icons/search.svg) center no-repeat
        background-size cover
        position absolute
        top 50%
        left 10px
        z-index 1
        transform: translateY(-50%)
    @media(max-width 1300px)
        margin-left 30px
    @media(max-width media-big-tb) 
        transform: skew(0)
    @media(max-width burger)
        margin 0 30px
    @media(max-width 585px)
        flex-direction column
        &:before
            display none
    @media(max-width 460px)
        display none

.search__input 
    min-width 300px
    height 30px
    padding 0 15px 0 30px
    border none
    outline none
    @media(max-width 1400px)
        min-width auto
    @media(max-width burger)
        height 35px
    @media(max-width 585px)
        height: 25px;
        width: 157px;
        padding 0 10px

.search__btn 
    background-color mainColor
    height 30px
    padding 0 30px
    border 0
    color #fff
    margin-left -1px
    transition: all ease .2s
    @media(min-width media-big-tb)
        &:hover
            background-color secondColor
    @media(max-width 1200px)
        padding 0 15px
    @media(max-width burger)
        height 35px
    @media(max-width 585px)
        height: 25px;
        width: 157px;

